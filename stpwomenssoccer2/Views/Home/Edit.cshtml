@model stpwomenssoccer2.Models.UpcomingEvent

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="col-sm-6 col-sm-offset-3 bg-primary" style="margin-bottom:120px;margin-top:25px;">
    <h2>Edit Event Cards</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CardId)

    <div class="form-group">
        @Html.LabelFor(model => model.CardDate, htmlAttributes: new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.CardDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CardDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CardTitle, htmlAttributes: new { @class = "control-label col-sm-3" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.CardTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CardTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2 text-center">
            <input type="submit" value="Save" class="btn btn-default" style="font-weight:bold; background-color:#FFD700; color:#191970; margin-bottom:20px" /> |
                @Html.ActionLink("Back to List", "EventCards")
        </div>
    </div>
</div>
}