@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        @*<ul class="nav navbar-nav navbar-right">*@
        <li>
            @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
            @if (User.IsInRole("Administrator"))
             {
                <button class="btn" style="font-weight:bold; background-color:#FFD700; color:#191970">@Html.ActionLink("Admin Page", "Index", "Admin")</button>
             }

            <button class="btn" style="font-weight:bold; background-color:#FFD700; color:#191970"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></button>
        </li>

        @*</ul>*@
    }
}
else
{
    @*<ul class="nav navbar-nav navbar-right">*@
    <li>
        <button class="btn" style="font-weight:bold; background-color:#FFD700; color:#191970">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</button>
        <button class="btn" style="font-weight:bold; background-color:#FFD700; color:#191970">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</button>
    </li>
    @*</ul>*@
}
